{
  "name": "notes-app",
  "private": true,
  "version": "1.0.0",
  "description": "A beautiful, modern notes application with rich text editing and organization features",
  "author": "Notes App Developer",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development ELECTRON_ENABLE_LOGGING=true electron dist-electron/main.cjs --enable-logging\" --kill-others --success first",
    "build": "vite build",
    "build:electron": "vite build --config vite.electron.config.ts",
    "build:all": "npm run build && npm run build:electron",
    "dist": "npm run build:all && electron-builder",
    "dist:win": "npm run build:all && electron-builder --win",
    "dist:mac": "npm run build:all && electron-builder --mac",
    "dist:linux": "npm run build:all && electron-builder --linux",
    "pack": "npm run build:all && electron-builder --dir",
    "preview": "vite preview",
    "clean": "rmdir /s /q dist dist-electron release 2>nul || true"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "dotenv": "^17.2.0",
    "firebase": "^11.10.0",
    "googleapis": "^152.0.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/jspdf": "^1.3.3",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.0.6",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.notesapp.desktop",
    "productName": "Notes App",
    "icon": "assets/icon",
    "asar": true,
    "copyright": "Copyright Â© 2025 Notes App",
    "directories": {
      "output": "release-final"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "assets/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
